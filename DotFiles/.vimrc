" below is for pathogen
" https://github.com/tpope/vim-pathogen
execute pathogen#infect()
" below is for vim-airline
" https://github.com/vim-airline/vim-airline
set laststatus=2
set encoding=utf-8
set t_Co=256

set nocompatible
set showmode
set showcmd
set ruler
syntax on
filetype plugin indent on
colors elflord

set listchars=tab:>-
" set list
set hlsearch

set tabstop=4
set shiftwidth=4
set expandtab
